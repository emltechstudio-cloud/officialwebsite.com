<body>
    <div class="chat-container">
        <div class="header">
            <img src="send_icon.png" alt="Logo" class="header-logo">
            <div class="header-text">
                <h1>Customer Support A.S</h1>
                <span class="subtitle">with <b>BEST 2.0</b></span>
            </div>
        </div>
        <div class="messages" id="messages"></div>
        <form id="chat-form" class="input-row">
            <textarea id="user-input" placeholder="Type your message..." autocomplete="off" required rows="1"></textarea>
            <button type="submit">>_></button>
        </form>
    </div>
    <script>
        const form = document.getElementById('chat-form');
        const input = document.getElementById('user-input');
        const messages = document.getElementById('messages');


        // Detect URLs and convert to clickable links
        function linkify(text) {
            const urlRegex = /(https?:\/\/[^\s]+)/g;
            return text.replace(urlRegex, function(url) {
                return `<a href="${url}" target="_blank" rel="noopener">${url}</a>`;
            });
        }

        function addMessage(text, sender) {
            const div = document.createElement('div');
            div.className = 'message ' + sender;
            const bubble = document.createElement('div');
            bubble.className = 'bubble';
            if (sender === 'bot') {
                bubble.innerHTML = linkify(text);
            } else {
                bubble.textContent = text;
            }
            div.appendChild(bubble);
            messages.appendChild(div);
            messages.scrollTop = messages.scrollHeight;
        }

        // Add animated typing indicator
        function addTypingIndicator() {
            const div = document.createElement('div');
            div.className = 'message bot';
            div.id = 'typing-indicator';
            div.innerHTML = '<div class="bubble"><span class="typing"><span></span><span></span><span></span></span></div>';
            messages.appendChild(div);
            messages.scrollTop = messages.scrollHeight;
        }

        function removeTypingIndicator() {
            const typing = document.getElementById('typing-indicator');
            if (typing) typing.remove();
        }

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const userText = input.value.trim();
            if (!userText) return;
            addMessage(userText, 'user');
            input.value = '';
            input.style.height = '40px'; // Reset height after send
            addTypingIndicator();
            try {
                const res = await fetch('http://127.0.0.1:5000/chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ message: userText })
                });
                const data = await res.json();
                removeTypingIndicator();
                addMessage(data.response, 'bot');
            } catch (err) {
                removeTypingIndicator();
                addMessage('Error: Could not reach server.', 'bot');
            }
        });

        // Auto-expand textarea as user types
        input.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });

        // Create iframe modal elements
        const iframeModal = document.createElement('div');
        iframeModal.className = 'iframe-modal';
        iframeModal.innerHTML = `
            <div class="iframe-box">
                <div class="iframe-toolbar">
                    <span style="font-weight:600">Embedded Browser</span>
                    <button id="iframe-back" title="Back">◀</button>
                    <button id="iframe-forward" title="Forward">▶</button>
                    <button id="iframe-open-new">Open in new tab</button>
                    <button id="iframe-close">Close</button>
                </div>
                <div id="iframe-loader" style="display:none;text-align:center;padding:0;background:#fff;">
                    <div class="iframe-loader-inner">
                        <div class="spinner" id="iframe-spinner"></div>
                        <div id="iframe-status">Loading…</div>
                        <div class="iframe-actions">
                            <button id="iframe-retry" style="display:none;">Retry</button>
                            <button id="iframe-open-new-2" style="display:none;">Open in new tab</button>
                        </div>
                    </div>
                </div>
                <iframe class="iframe-frame" id="iframe-frame"></iframe>
            </div>
        `;
        document.body.appendChild(iframeModal);

        // Confirmation modal
        const confirmModal = document.createElement('div');
        confirmModal.className = 'confirm-modal';
        confirmModal.innerHTML = `
            <div class="confirm-box">
                <p id="confirm-text">Open external link?</p>
                <div style="display:flex;gap:8px;justify-content:flex-end;margin-top:8px;">
                    <button id="confirm-cancel">Cancel</button>
                    <button id="confirm-open">Open</button>
                </div>
            </div>
        `;
        document.body.appendChild(confirmModal);
        const confirmText = document.getElementById('confirm-text');
        const confirmCancel = document.getElementById('confirm-cancel');
        const confirmOpen = document.getElementById('confirm-open');
        let pendingUrl = null;

        confirmCancel.addEventListener('click', () => {
            pendingUrl = null;
            confirmModal.style.display = 'none';
        });
        confirmOpen.addEventListener('click', () => {
            if (pendingUrl) openInIframe(pendingUrl);
            pendingUrl = null;
            confirmModal.style.display = 'none';
        });

        const iframeFrame = document.getElementById('iframe-frame');
        const iframeClose = document.getElementById('iframe-close');
        const iframeOpenNew = document.getElementById('iframe-open-new');
        const iframeBack = document.getElementById('iframe-back');
        const iframeForward = document.getElementById('iframe-forward');
        const iframeLoader = document.getElementById('iframe-loader');

        // Helper to enable/disable nav buttons
        function setNav(enabled) {
            iframeBack.disabled = !enabled;
            iframeForward.disabled = !enabled;
        }

        function openInIframe(url) {
            try {
                iframeFrame.src = url;
                iframeModal.style.display = 'flex';
                iframeLoader.style.display = 'block';
                iframeStatus.textContent = 'Loading…';
                iframeStatus.classList.remove('iframe-error');
                setNav(false);
                // start timeout to detect framing issues; if framing fails, open in new tab and close modal
                if (iframeLoadTimeout) clearTimeout(iframeLoadTimeout);
                iframeLoadTimeout = setTimeout(() => {
                    const urlToOpen = iframeFrame.src;
                    iframeLoader.style.display = 'none';
                    closeIframe();
                    if (urlToOpen && urlToOpen !== 'about:blank') {
                        window.open(urlToOpen, '_blank');
                    }
                }, 6000);
            } catch (e) {
                // fallback
                window.open(url, '_blank');
            }
        }

        function closeIframe() {
            iframeFrame.src = 'about:blank';
            iframeModal.style.display = 'none';
        }

        iframeClose.addEventListener('click', closeIframe);
        iframeOpenNew.addEventListener('click', () => {
            const url = iframeFrame.src;
            if (url && url !== 'about:blank') window.open(url, '_blank');
        });
        const iframeRetry = document.getElementById('iframe-retry');
        const iframeOpenNew2 = document.getElementById('iframe-open-new-2');
        const iframeStatus = document.getElementById('iframe-status');

        iframeRetry.addEventListener('click', () => {
            // retry loading current src
            iframeStatus.textContent = 'Retrying…';
            iframeRetry.style.display = 'none';
            iframeOpenNew2.style.display = 'none';
            iframeLoader.style.display = 'block';
            iframeFrame.src = iframeFrame.src; // reload
        });
        iframeOpenNew2.addEventListener('click', () => {
            const url = iframeFrame.src;
            if (url && url !== 'about:blank') window.open(url, '_blank');
        });

        // Detect iframe load and framing errors
        let iframeLoadTimeout = null;
        iframeFrame.addEventListener('load', () => {
            iframeLoader.style.display = 'none';
            iframeStatus.textContent = '';
            // Try to access contentWindow to see if same-origin
            try {
                const cw = iframeFrame.contentWindow;
                // If accessible, enable nav
                setNav(true);
            } catch (err) {
                // Cross-origin - disable nav
                setNav(false);
            }
            // hide retry/open buttons
            iframeRetry.style.display = 'none';
            iframeOpenNew2.style.display = 'none';
            if (iframeLoadTimeout) {
                clearTimeout(iframeLoadTimeout);
                iframeLoadTimeout = null;
            }
        });

        // Timeout to detect framing issues (some sites block embedding)
        // Some browsers don't support loadstart on iframe; start timeout when setting src instead
        // We'll set a timeout whenever we set src (handled in openInIframe)

        // As some browsers don't fire loadstart, also set a general timeout when setting src
        iframeFrame.addEventListener('error', () => {
            iframeLoader.style.display = 'none';
            const url = iframeFrame.src;
            closeIframe();
            if (url && url !== 'about:blank') window.open(url, '_blank');
        });

        // Navigation (best-effort; only works same-origin)
        iframeBack.addEventListener('click', () => {
            try { iframeFrame.contentWindow.history.back(); } catch (e) { }
        });
        iframeForward.addEventListener('click', () => {
            try { iframeFrame.contentWindow.history.forward(); } catch (e) { }
        });

        // Intercept clicks on links inside bot messages to open in iframe (with confirmation)
        messages.addEventListener('click', (e) => {
            const a = e.target.closest('a');
            if (!a) return;
            // Only intercept bot links
            const msg = a.closest('.message');
            if (msg && msg.classList.contains('bot')) {
                e.preventDefault();
                const url = a.href;
                // ask for confirmation
                pendingUrl = url;
                confirmText.textContent = `Open this link inside the chatbot?\n${url}`;
                confirmModal.style.display = 'flex';
            }
        });
    </script>
</body>
